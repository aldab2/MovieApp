<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/scrollView2">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="8dp"

    tools:context="com.example.abdullah.movieproject.MovieDetails">

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="302dp"
        android:layout_height="327dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/fxtv_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/image_iv"
      android:layout_margin="8dp"
        android:fontFamily="monospace"
        android:text="@string/overview"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/btn_reviews"
        app:layout_constraintTop_toBottomOf="@+id/btn_reviews" />

    <TextView
        android:id="@+id/tv_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fxtv_overview"

        android:layout_marginEnd="12dp"
        android:paddingEnd="8dp"
        android:paddingRight="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="monospace"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fxtv_overview"
        app:layout_constraintTop_toBottomOf="@+id/fxtv_overview" />


    <TextView
        android:id="@+id/fxtv_relase_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn_favorite"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:text="Release Date: "
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_relase_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fxtv_relase_date"
        android:layout_below="@+id/fxtv_relase_date"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toEndOf="@+id/image_iv"
        app:layout_constraintTop_toBottomOf="@+id/fxtv_relase_date" />

    <TextView
        android:id="@+id/fxtv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_relase_date"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/fxtv_rating"
        android:fontFamily="casual"
        android:text="@string/age"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toEndOf="@+id/image_iv"
        app:layout_constraintTop_toBottomOf="@+id/tv_relase_date" />


    <TextView
        android:id="@+id/tv_adult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fxtv_rating"

        android:layout_below="@+id/fxtv_age"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_iv"
        app:layout_constraintTop_toBottomOf="@+id/fxtv_age" />

    <TextView
        android:id="@+id/fxtv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_adult"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/image_iv"
        android:fontFamily="casual"
        android:text="@string/rating_val"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_iv"
        app:layout_constraintTop_toBottomOf="@+id/tv_adult" />

    <TextView
        android:id="@+id/tv_rating_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fxtv_rating"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/image_iv"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_iv"
        app:layout_constraintTop_toBottomOf="@+id/fxtv_rating" />

    <ImageView
        android:id="@+id/btn_favorite"
        android:layout_width="85dp"
        android:layout_height="85dp"

        android:layout_alignBottom="@+id/image_iv"
        android:layout_alignEnd="@+id/fxtv_rating"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="@string/btn_favorite"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/image_iv"
        app:layout_constraintTop_toBottomOf="@+id/tv_rating_val"
        app:srcCompat="@android:drawable/btn_star" />

    <Button
        android:id="@+id/btn_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fxtv_overview"
        android:layout_below="@+id/image_iv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Reviews"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_iv"
        app:srcCompat="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/tv_label_trailer"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignStart="@+id/tv_overview"
        android:layout_below="@+id/tv_overview"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="monospace"
        android:text="Trailers:"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_overview"
        app:layout_constraintTop_toBottomOf="@+id/tv_overview" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_trailer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_label_trailer"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_trailer">

    </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>


</ScrollView>